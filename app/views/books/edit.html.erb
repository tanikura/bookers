<h1>Editing Book</h1>
<%= form_with model:@book, url:update_book_path(@book.id),method: :patch do |f| %>

  <label for="title">Title</label>
  <div class="form">
    <%= f.text_field:title %>
  </div>
  <label for="body">Body</label>
  <div class="form">
    <%= f.text_area:body %>
  </div>
  <div class="action">
    <%= f.submit "Update Book" %>
  </div>

<a><%= link_to 'Show', @book %></a>
|
<a href="/books">Back</a>


<% end %>
